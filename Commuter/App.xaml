<Application
    x:Class="Commuter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Commuter"
    xmlns:converters="using:Commuter.Converters"
    RequestedTheme="Dark">

    <Application.Resources>
        <local:ViewModelLocator x:Key="Locator"/>
        <converters:VisibleWhenTrueConverter x:Key="VisibleWhenTrue"/>
        <converters:VisibleWhenFalseConverter x:Key="VisibleWhenFalse"/>
        <converters:DateConverter x:Key="DateConverter"/>
    </Application.Resources>

</Application>
